# =============================================================================
# Django Core Settings
# =============================================================================
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Database Configuration
# =============================================================================
# For PostgreSQL (recommended for production):
DATABASE_URL=postgresql://studio_user:studio_password@localhost:5432/music_studio
# For SQLite (development only):
# DATABASE_URL=sqlite:///db.sqlite3

# Legacy database env vars (if not using DATABASE_URL):
DB_NAME=music_studio
DB_USER=studio_user
DB_PASSWORD=studio_password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# JWT Settings
# =============================================================================
# ACCESS_TOKEN_LIFETIME=60  # minutes (optional, defaults to 60)
# REFRESH_TOKEN_LIFETIME=7  # days (optional, defaults to 7)

# =============================================================================
# File Storage (S3/MinIO/R2)
# =============================================================================
# For local MinIO:
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=minio_password
MINIO_BUCKET=music-studio

# For production S3/R2 (uncomment and configure):
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_ENDPOINT_URL=https://your-endpoint.r2.cloudflarestorage.com
# AWS_S3_USE_SSL=True

# =============================================================================
# Email Configuration
# =============================================================================
# Note: StudioSync uses database-configured email settings at runtime
# These are fallback defaults only
DEFAULT_FROM_EMAIL=noreply@studiosync.local

# =============================================================================
# SMS Configuration (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =============================================================================
# Payment Processing (Stripe)
# =============================================================================
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =============================================================================
# Seeding & Test Data
# =============================================================================
# For local development, these default to simple passwords
# For CI/production, set SEED_SECURE_MODE=true and provide secure passwords
SEED_SECURE_MODE=false
SEED_ADMIN_PASSWORD=admin123
SEED_TEACHER_PASSWORD=teacher123
SEED_STUDENT_PASSWORD=student123

# =============================================================================
# Frontend Configuration
# =============================================================================
# If developing remotely, change localhost to your remote server's IP address
# unless you are using SSH port forwarding.
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# Backend uses this URL for generating links in emails and notifications
# In production, set this to your actual frontend URL (e.g., https://studio.example.com)
FRONTEND_BASE_URL=http://localhost:3000
